{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TactiClip",
  "version": "0.1.0",
  "identifier": "com.TactiClip.PetchouSoftware",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "transparent": true,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "visible": false,
        "shadow": false,
        "alwaysOnTop": true,
        "title": "TactiClip",
        "width": 400,
        "height": 140,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
